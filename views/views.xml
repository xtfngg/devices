<odoo>
  <data>
    <!-- list view -->

    <record model="ir.ui.view" id="devices_list">
      <field name="name">devices list</field>
      <field name="model">devices.devices</field>
      <field name="arch" type="xml">
        <tree>
          <field name="asset_number"/>
          <field name="category_id"/>
          <field name="name"/>
          <field name="date"/>
          <field name="price"/>
          <field name="department"/>
          <field name="user_name"/>
          <field name="location"/>
          <field name="status"/>
          <field name="netwrok"/>
          <field name="notes"/>
        </tree>
      </field>
    </record>

    <!-- form view -->

    <record model="ir.ui.view" id="devices_form">
      <field name="name">devices from</field>
      <field name="model">devices.devices</field>
      <field name="arch" type="xml">
        <form>
        	<sheet>
        		<group>
        			<group>
                <field name="asset_number" string="asset number"/>
                <field name="category_id"/>
                <field name="name"/>
                <field name="date"/>
                <field name="price"/>
        			</group>
              <group>
                <field name="department"/>
                <field name="user_name"/>
                <field name="location"/>
                <field name="status"/>
                <field name="netwrok"/>
        		  </group>
        	</group>
        	<group>
            <field name="notes"/>
        	</group>
        	</sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="message_ids" widget="mail_thread"/>
          </div>
        </form>
      </field>
    </record>
    
    <!-- category form 
    
    <record model="ir.ui.view" id="devices_categorys_form">
    	<field name="name">devicescategory form</field>
      <field name="model">devices.category</field>
      <field name="arch" type="xml">
      	<form>
        	<sheet>
        		<group>
              <field name="name"/>
        	  </group>
        	</sheet>
        </form>
      </field>
    </record>
    -->

   <!-- search -->
   
    <record model="ir.ui.view" id="devices_search_view">
      <field name="name">devices search</field>
      <field name="model">devices.devices</field>
      <field name="arch" type="xml">
        <search>
        	<field name="name"/>
          <field name="asset_number"/>
          <field name="category_id"/>
          <field name="user_name"/>
          <field name="status"/>
          <filter string="Assigned" name="assigned" domain="[('user_name', '!=', False)]"/>
          <filter string="Available" name="available" domain="[('user_name', '=', False)]"/>
          <filter string="My Equipments" name="my" domain="[('user_name', '=', uid)]"/>
          <separator/>
          <group string='Group By'>
            <filter string='Category' domain="[]" context="{'group_by': 'category_id'}"/>
            <filter string='Owner' domain="[]" context="{'group_by': 'user_name'}"/>
          </group>
        </search>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="devices.action_window">
      <field name="name">devices window</field>
      <field name="res_model">devices.devices</field>
      <field name="view_mode">tree,form</field>
    </record>
    
    <record model="ir.actions.act_window" id="devices.action_category_window">
      <field name="name">devices category window</field>
      <field name="res_model">devices.category</field>
      <field name="view_mode">tree,form</field>
    </record>
    
    
    <!-- Top menu item -->

    <menuitem name="devices" id="devices.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="devices.menu_1" parent="devices.menu_root"/>
    <menuitem name="Menu 2" id="devices.menu_2" parent="devices.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="devices.menu_1_list" parent="devices.menu_1"
              action="devices.action_window"/>
    <menuitem name="List" id="devices.menu_2_list" parent="devices.menu_2"
              action="devices.action_category_window"/>          
  </data>
</odoo>